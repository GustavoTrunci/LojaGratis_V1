<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LojaGratis_V1"
             x:Class="LojaGratis_V1.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label x:Name="l_usuario" WidthRequest="300"></Label>
        
        <Button x:Name="b_Consumir" Text="Consumir" Clicked="B_Consumir_Clicked"
           HorizontalOptions="Center"
           VerticalOptions="Center" />

        <Button x:Name="b_Lista_Prod" Text="Lista Produtos" Clicked="B_Lista_Prod_Clicked"
           HorizontalOptions="Center"
           VerticalOptions="Center" />

        
        <Button x:Name="b_Relatorio" Text="Relatório" Clicked="B_Relatorio_Clicked"
           HorizontalOptions="Center"
           VerticalOptions="Center" />

        <Button x:Name="b_Admin" Text="Admin" Clicked="B_Admin_Clicked"
           HorizontalOptions="Center"
           VerticalOptions="Center" 
                IsVisible="False"/>


        <Button x:Name="b_Logout" Text="Logout" Clicked="B_Logout_Clicked"
           HorizontalOptions="Center"
           VerticalOptions="Center" 
                />

        <Label HorizontalOptions="End" Text="desgin by André Lingiardi"></Label>

    </StackLayout>

</ContentPage>
